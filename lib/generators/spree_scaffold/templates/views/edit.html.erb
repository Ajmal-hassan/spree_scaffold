<%% content_for :page_title do %>
  <%%= Spree.t("editing_<%= model_name %>") %>
<%% end %>

<%% content_for :page_actions do %>
  <li>
    <%%= button_link_to Spree.t(:back_to_<%= model_name.pluralize %>_list), collection_url, :icon => 'icon-arrow-left' %>
  </li>
<%% end %>

<div data-hook="admin_<%= model_name %>_edit_form_header">
  <%%= render :partial => 'spree/shared/error_messages', :locals => { :target => @<%= model_name %> } %>
</div>

<div data-hook="admin_<%= model_name %>_edit_form">
  <%%= form_for [:admin, @<%= model_name %>] do |f| %>
    <%%= render :partial => 'form', :locals => { :f => f } %>

    <div data-hook="admin_<%= model_name %>_edit_form_buttons">
      <%%= render :partial => 'spree/admin/shared/edit_resource_links' %>
    </div>
  <%% end %>
</div>